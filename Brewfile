
# CPAS Master Agent (Greta) Dependencies
# This file lists all required packages for installation via Homebrew

# Core system dependencies
brew "python@3.11"
brew "node@18"
brew "mongodb-community"
brew "ollama"
brew "portaudio"
brew "ffmpeg"
brew "git"

# Python package manager
brew "pipx"

# Development tools (optional but recommended)
brew "wget"
brew "curl"
brew "jq"

# Voice processing dependencies
brew "espeak"

# Database tools
brew "mongodb-database-tools"

# Cask applications
cask "mongodb-compass"  # Optional: GUI for MongoDB
